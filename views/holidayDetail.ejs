<body>
<%- await include('partials/navbar.ejs') -%>
<div class="container">
<div id="content">
<div class="row">
<div class="col-md-10">
<%- await include('partials/holidayDetailBreadcrumb.ejs') -%>

<h2><%=holiday.replace(/'/g, 'â€™')%> <%=year||''%> / <span lang="he" dir="rtl" class="text-nowrap"><%=hebrew%> <% if (year) { %><%=upcomingHebrewYear%><% } %></span></h2>
<% if (year && year < 1752) { -%>
<%- await include('partials/warning-1752.ejs') -%>
<% } -%>
<p class="lead"><%=holiday%> (<%=descrShort%>)
for Hebrew Year <%=upcomingHebrewYear%> <%-nextObservedHtml%>.
<% if (currentItem.parsha) { %>
 This corresponds to Parashat <%= currentItem.parsha.join('-') %>.
<% } %>
</p>
<p><%-descrLong%>
<br><small class="d-print-none"><em>Read more from <a class="outbound"
title="More about <%=holiday%> from <%=meta.about.name%>"
href="<%=meta.about.href%>"><%=meta.about.name%>&nbsp;&rarr;</a>
<% if (meta.about.name !== 'Wikipedia' && typeof meta.wikipedia === 'object' && typeof meta.wikipedia.href === 'string') { %>
or <a class="outbound" title="More about <%=holiday%> from Wikipedia"
href="<%=meta.wikipedia.href%>">Wikipedia&nbsp;&rarr;</a>
<% } // wikipedia %>
</em></small></p>

<% if (holiday === 'Chanukah' && chanukahItems !== null) { %>
<div class="table-responsive">
<table class="table table-striped">
<colgroup><col><col></colgroup>
<thead>
<tr><th>Date</th><th>ğŸ• <span class="d-none d-sm-inline">Chanukah</span> Candles</th></tr>
</thead>
<tbody>
<% for (let i = 0; i < chanukahItems.length; i++) { const item = chanukahItems[i]; %>
<tr class="<%=item.ppf%>">
<td><time datetime="<%=item.d.format('YYYY-MM-DD')%>"><%= item.d.format('dddd') %>, <%- item.monthDayHtml %><% if (i === 0 || item.d.year() != chanukahItems[0].d.year()) { %>, <%= item.d.format('YYYY') %><% } %></time></td>
<%   if (item.day8) { %>
<td>Chanukah: 8th day</td>
<%   } else { %>
<td><span class="d-inline d-sm-none"><%=item.digit%> ğŸ•¯ï¸</span> <span class="d-none d-sm-inline">Light <%= item.candles %> candle<%= item.candles === 1 ? '' : 's' %></span> <%= item.when %></td>
<%   } %>
</tr>
<% } %>
</tbody>
</table>
</div><!-- chanukah -->
<% } %>

<div class="d-flex justify-content-center d-print-none">
<h6 class="text-muted mb-1">Advertisement</h6>
</div><!-- .d-flex -->
<div class="d-print-none mb-2">
<script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-7687563417622459"
crossorigin="anonymous"></script>
<ins class="adsbygoogle"
style="display:block; text-align:center;"
data-ad-layout="in-article"
data-ad-format="fluid"
data-ad-client="ca-pub-7687563417622459"
data-ad-slot="5342180883"></ins>
<script>
(adsbygoogle = window.adsbygoogle || []).push({});
</script>
</div><!-- .d-print-none -->

<% if (typeof meta.reading !== 'undefined' && Array.isArray(meta.items)) { %>
<div class="d-print-none">
<nav class="d-none d-md-block">
<ul class="pagination<%= meta.items.length > 3 ? ' pagination-sm' : ''%>">
<li class="page-item"><a class="page-link" href="#dates">Dates</a></li>
<% for (const reading of Object.values(meta.reading)) { %>
<li class="page-item"><a class="page-link" href="#reading<%=reading.shortName === 'Tanakh' ? '' : '-'+reading.id %>"><%=reading.shortName%></a></li>
<% } // ... for %>
<li class="page-item"><a class="page-link" href="#ref">References</a></li>
</ul><!-- .pagination -->
</nav>
</div>
<% } // meta.reading %>

<h3 id="dates">Dates for <%=holiday.replace(/'/g, 'â€™')%><% if (il && (holiday === 'Shavuot' || holiday === 'Pesach')) { %> in ğŸ‡®ğŸ‡±<%}%></h3>
<div class="table-responsive">
<table class="table table-striped">
<colgroup><col><col><col></colgroup>
<thead>
<tr><th>Holiday</th><th>Starts</th><th>Ends<% if (il && (holiday === 'Shavuot' || holiday === 'Pesach')) { %> in ğŸ‡®ğŸ‡±<%}%></th><th>Hebrew Date<% if (occursOn[0].duration > 1) { %>s<% } %></th></tr>
</thead>
<tbody>
<% occursOn.forEach((item) => { %>
<tr class="<%=item.ppf%>">
<td><a href="<%=item.id%>-<%=holiday === 'Asara B\'Tevet' ? item.d.format('YYYYMMDD') : item.d.format('YYYY')%><%=il?'?i=on':''%>"><%=holiday%> <%=item.d.format('YYYY')%><% if (holiday === 'Asara B\'Tevet') {%> (<%=item.hd.getFullYear()%>)<%}%></a>
<% if (item.parsha) { %><br><small>Parashat <%= item.parsha.join('-') %></small><% } %>
</td>
<td><time datetime="<%=item.d.format('YYYY-MM-DD')%>"><%- item.startDowHtml %>, <%- item.startMonDayHtml %></time></td>
<td><time datetime="<%=item.endD.format('YYYY-MM-DD')%>"><%- item.endDowHtml %>, <%- item.endMonDayHtml %></time></td>
<td class="small"><%=item.hdRange%></td>
</tr>
<% }); %>
</tbody>
</table>
</div>
<% if (holiday !== 'Asara B\'Tevet') { %>
<form method="GET" action="/holidays/<%=holidayAnchor%>">
<label for="gy">Look up the date of <%=holiday%> in a past or future year</label>
<div class="row gx-2 mb-3">
<div class="col-auto mb-2">
<input type="text" inputmode="numeric" class="form-control" required name="gy" id="gy" placeholder="1970" size="5" maxlength="4" pattern="\d*">
</div><!-- .col -->
<div class="col-auto mb-2">
<button type="submit" class="btn btn-primary">Go</button>
</div><!-- .col -->
</div>
</form>
<% } %>

<% if (typeof meta.reading !== 'undefined') { %>
<h3 id="reading" class="mt-3">Tanakh</h3>
<% for (const [item, reading] of Object.entries(meta.reading)) { %>
<h4 id="reading-<%=reading.id%>"><%=item.replace(/'/g, 'â€™')%>
<% if (reading.hebrew) { %> / <span lang="he" dir="rtl" class="text-nowrap"><%= reading.hebrew %></span><% } %>
<% if (typeof reading.d !== 'undefined') { %><br><time class="text-muted small" datetime="<%=reading.d.format('YYYY-MM-DD')%>"><%=reading.d.format('dddd')%>, <span class="text-nowrap"><%=reading.d.format('D MMMM YYYY')%></span> / <span class="text-nowrap"><%=reading.hd.toString()%></span></time><% } %>
</h4>
<% if (reading.summary) { %>
<p class="lead torah">Torah Portion:
<% if (reading.parsha) { %>Parashat <%= reading.parsha.join('-') %> &middot; <% } %>
<% if (reading.torahHtml) { %><%- reading.torahHtml %><% } else { -%>
<% if (reading.torahHref) { %><a class="outbound" title="English translation from JPS Tanakh"
href="<%=reading.torahHref%>"><% } %><%=reading.summary%><%- reading.torahHref ? '</a>' : '' %>
<% } %></p>
<% } // reading.summary %>
<%- await include('partials/aliyot-loop.ejs', {aliyot: reading.fullkriyah}) -%>
<% if (reading.haftara) { %>
<p class="lead haftara">Haftarah:
<% if (reading.haftaraHtml) { %><%- reading.haftaraHtml %><% } else { -%>
<% if (reading.haftaraHref) { %><a class="outbound" title="English translation from JPS Tanakh"
href="<%=reading.haftaraHref%>"><% } %><%=reading.haftara%><%- reading.haftaraHref ? '</a>' : '' %>
<% } %>
<%- await include('partials/numverses.ejs', {v: reading.haftaraNumV}) -%>
</p>
<% } // reading.haftara %>
<% } // ... for %>
<% } // meta.reading %>
<h3 id="ref">References</h3>
<dl>
<dt><em><a class="amzn" id="strassfeld-2"
href="https://www.amazon.com/o/ASIN/0062720082/hebcal-20">The
Jewish Holidays: A Guide &amp; Commentary</a></em> <small class="text-muted">(paid link)</small>
<dd>Rabbi Michael Strassfeld
<% if (typeof meta.reading !== 'undefined') { %>
<dt><em><a class="outbound"
href="https://www.sefaria.org/texts/Tanakh">Sefaria Tanakh</a></em>
<dd>Sefaria.org
<dt><em><a class="amzn" id="jps-tanakh-1"
title="Tanakh: The Holy Scriptures, The New JPS Translation According to the Traditional Hebrew Text"
href="https://www.amazon.com/o/ASIN/0827602529/hebcal-20">Tanakh:
The Holy Scriptures</a></em> <small class="text-muted">(paid link)</small>
<dd>Jewish Publication Society
<% } // meta.reading %>
<% if (typeof meta.wikipedia === 'object' && typeof meta.wikipedia.href === 'string') { %>
<dt><a class="outbound" href="<%=meta.wikipedia.href%>">"<%=meta.wikipedia.title%>" in <em>Wikipedia: The Free Encyclopedia</em></a>
<dd>Wikimedia Foundation Inc.
<% } %>
</dl>
</div><!-- .col-md-10 -->
<% if (typeof meta.books !== 'undefined') { %>
<div class="col-md-2">
<h6 id="books">Books <small class="text-muted">(paid links)</small></h6>
<div class="row">
<% meta.books.forEach((book) => { %>
<div class="col">
<div class="card mb-3" style="width: 8rem;">
<a class="amzn" id="<%=holidayAnchor%>-<%=book.ASIN%>-1" title="<%=book.text%>" href="https://www.amazon.com/o/ASIN/<%=book.ASIN%>/hebcal-20"><img
class="img-fluid card-img-top" alt="<%=book.text%>" width="104" height="160" style="border:none"
src="https://www.hebcal.com/i/<%=book.ASIN%>.01.MZZZZZZZ.jpg"></a>
<div class="card-body">
<p class="card-text small"><a class="amzn" id="<%=holidayAnchor%>-<%=book.ASIN%>-2" title="<%=book.text%>" href="https://www.amazon.com/o/ASIN/<%=book.ASIN%>/hebcal-20"><%=book.shortTitle%></a>
<% if (book.author) { %><br>by <%=book.author%><% } %></p>
</div><!-- .card-body -->
</div><!-- .card -->
</div><!-- .col -->
<% }); %>
</div><!-- .row -->
</div><!-- .col-md-2 -->
<% } // books %>

</div><!-- .row -->

<div class="row">
<%- await include('partials/holidayDetailBreadcrumb.ejs') -%>
</div>
</div><!-- #content -->

