<li><%=aliyah.num%><% if (aliyah.reason) { %><span class="text-success">*</span><% } %>:
<a title="Hebrew-English text and commentary from Sefaria.org" href="<%=aliyah.href%>"><%=aliyah.verses%></a>
<%- await include('numverses.ejs', {v: aliyah.v}) -%>
<% if (typeof aliyah.tikkun === 'string') { -%>
<span class="text-nowrap">
<a class="d-print-none ms-2" title="Tikkun.io - <%=aliyah.verses%>" href="<%-aliyah.tikkun%>">
<svg class="icon icon-sm"><use xlink:href="<%=spriteHref%>#bi-book"></use></svg></a>
<% if (typeof aliyah.pocketTorahAudio === 'string') { -%>
<a class="d-none d-sm-inline ms-2 d-print-none" target="<%=(typeof amp === 'boolean' && amp) ? '_blank' : 'pocketTorah'%>" title="Audio from PocketTorah" href="<%-aliyah.pocketTorahAudio%>">
<svg class="icon icon-sm"><use xlink:href="<%=spriteHref%>#bi-volume-up-fill"></use></svg></a>  
<% } -%>
</span>
<% } -%>
<% if (aliyah.reason) { -%>
<br><span class="text-success ps-1 small">*<%= aliyah.reason %></span>
<% } -%>
</li>
