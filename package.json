{
  "name": "hebcal-web",
  "version": "1.0.0",
  "description": "Hebcal server-side Node.js for www.hebcal.com and download.hebcal.com",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hebcal/hebcal-web.git"
  },
  "bugs": {
    "url": "https://github.com/hebcal/hebcal-web/issues"
  },
  "homepage": "https://github.com/hebcal/hebcal-web#readme",
  "scripts": {
    "build": "npm run build:cp-json && npm run build:babel",
    "build:babel": "babel src --out-dir dist",
    "build:cp-json": "mkdir -p ./dist && cp ./src/*.json ./dist",
    "deploy": "rsync -av ./static/ /var/www/html/ && rsync -av ./dist/ /var/www/dist/ && rsync -av ./views/ /var/www/dist/views/ && rsync -av ./node_modules/ /var/www/node_modules/ && rsync -av ./node_modules/geolite2-redist/dbs/GeoLite2-Country.mmdb /var/www/",
    "start": "node dist/app-www.js",
    "test": "echo \"OK: no test specified\" && exit 0"
  },
  "keywords": [
    "hebcal"
  ],
  "author": "Michael J. Radwin (https://github.com/mjradwin)",
  "license": "BSD-2-Clause",
  "devDependencies": {
    "@babel/cli": "^7.11.6",
    "@babel/core": "^7.11.6",
    "@babel/preset-env": "^7.11.5",
    "@babel/register": "^7.11.5",
    "eslint": "^7.8.1",
    "eslint-config-google": "^0.14.0"
  },
  "dependencies": {
    "@hebcal/core": "^2.5.1",
    "@hebcal/geo-sqlite": "^2.2.5",
    "@hebcal/icalendar": "^2.4.0",
    "@hebcal/leyning": "^3.3.0",
    "@hebcal/locales": "^2.1.0",
    "@hebcal/rest-api": "^2.5.0",
    "better-sqlite3": "^7.1.0",
    "dayjs": "^1.8.35",
    "ejs": "^2.7.4",
    "etag": "^1.8.1",
    "gematriya": "^2.0.0",
    "geolite2-redist": "^1.0.7",
    "http-errors": "^1.8.0",
    "koa": "^2.13.0",
    "koa-bodyparser": "^4.3.0",
    "koa-compress": "^5.0.1",
    "koa-conditional-get": "^2.0.0",
    "koa-ejs": "^4.3.0",
    "koa-error": "^3.2.0",
    "koa-etag": "^3.0.0",
    "koa-send": "^5.0.1",
    "koa-static": "^5.0.0",
    "koa-timeout-v2": "^1.0.0",
    "maxmind": "^4.1.4",
    "mysql2": "^2.1.0",
    "nodemailer": "^6.4.11",
    "pdfkit": "^0.11.0",
    "pino": "^6.6.0",
    "random-bigint": "0.0.1"
  }
}
