{
  "name": "hebcal-web",
  "version": "2.0.0",
  "description": "Hebcal server-side Node.js for www.hebcal.com and download.hebcal.com",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hebcal/hebcal-web.git"
  },
  "bugs": {
    "url": "https://github.com/hebcal/hebcal-web/issues"
  },
  "homepage": "https://github.com/hebcal/hebcal-web#readme",
  "config": {
    "sprite": "sprite7b.svg"
  },
  "scripts": {
    "build": "npm run build:cp-json && npm run build:babel",
    "build:babel": "babel src --out-dir dist",
    "build:cp-json": "mkdir -p ./dist && cp ./src/*.json ./dist",
    "build-static": "babel --no-babelrc --minified --presets '@babel/preset-env' --plugins babel-plugin-transform-modules-iife static/i/hebcal-app.js > static/i/hebcal-app.min.js",
    "deploy": "brotli -f --keep --best ./static/i/$npm_package_config_sprite && gzip -f --keep --best ./static/i/$npm_package_config_sprite && rsync -av ./fonts/ /var/www/fonts/ && rsync -av ./static/ /var/www/html/ && rsync -av ./package.json /var/www/ && rsync -av ./dist/ /var/www/dist/ && rsync -av ./views/ /var/www/dist/views/ && rsync -av ./node_modules/ /var/www/node_modules/ && rsync -av ./node_modules/geolite2-redist/dbs/GeoLite2-*.mmdb /var/www/",
    "start": "node dist/app-www.js",
    "test": "echo \"OK: no test specified\" && exit 0"
  },
  "keywords": [
    "hebcal"
  ],
  "author": "Michael J. Radwin (https://github.com/mjradwin)",
  "license": "BSD-2-Clause",
  "devDependencies": {
    "@babel/cli": "^7.14.8",
    "@babel/core": "^7.14.8",
    "@babel/preset-env": "^7.14.8",
    "@babel/register": "^7.14.5",
    "babel-plugin-transform-modules-iife": "^1.0.0",
    "eslint": "^7.31.0",
    "eslint-config-google": "^0.14.0"
  },
  "dependencies": {
    "@hebcal/core": "^3.21.1",
    "@hebcal/geo-sqlite": "^3.4.2",
    "@hebcal/icalendar": "^4.11.0",
    "@hebcal/leyning": "^4.8.3",
    "@hebcal/locales": "^3.3.0",
    "@hebcal/rest-api": "^3.7.2",
    "better-sqlite3": "^7.4.1",
    "dayjs": "^1.10.6",
    "ejs": "^3.1.6",
    "etag": "^1.8.1",
    "gematriya": "^2.0.0",
    "geolite2-redist": "^1.0.7",
    "haversine": "^1.1.1",
    "http-errors": "^1.8.0",
    "koa": "^2.13.1",
    "koa-better-response-time": "^1.1.0",
    "koa-bodyparser": "^4.3.0",
    "koa-compress": "^5.0.1",
    "koa-conditional-get": "^3.0.0",
    "koa-ejs": "^4.3.0",
    "koa-error": "^3.2.0",
    "koa-send": "^5.0.1",
    "koa-static": "^5.0.0",
    "koa-timeout-v2": "^1.0.0",
    "maxmind": "^4.3.2",
    "murmurhash3": "^0.5.0",
    "mysql2": "^2.2.5",
    "nodemailer": "^6.6.3",
    "pdfkit": "^0.12.1",
    "pino": "^6.13.0",
    "random-bigint": "0.0.1",
    "ulid": "^2.3.0",
    "universal-analytics": "^0.4.23",
    "uuid-random": "^1.3.2"
  }
}
